/* Visit https://aka.ms/tsconfig to read more about this file */

{
  "compilerOptions": {

    "target": "es2019",                                 
    "module": "commonjs",                                
    "rootDir": "src",                                  
    "moduleResolution": "node",                                                         
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],                                 
    "outDir": "./dist",                                   
    "removeComments": true,                           
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true     
                              
  }
}
